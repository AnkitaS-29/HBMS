@model IEnumerable<HBMS.Models.RoomDetails180625>

@{
    ViewBag.Title = "RoomIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br>
<br>
<br>
<h2>RoomIndex</h2>

<p>
    @Html.ActionLink("Create New", "AddRoom")
</p>
<table style="background-color:lemonchiffon" class="table">
    <tr style="background-color:khaki">
        <th>
            @Html.DisplayNameFor(model => model.RoomNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Per_Night_Rate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Availability)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hotels180625.City)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoomNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Per_Night_Rate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Availability)
        </td>
        <td>
           <img src="~/images/JWMarriott.jpg"width="200" height="200"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hotels180625.City)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditRoom", new { id=item.RoomID }) |
            @Html.ActionLink("Details", "RoomDetails", new { id=item.RoomID }) |
            @Html.ActionLink("Delete", "DeleteRoom", new { id=item.RoomID })
        </td>
    </tr>
}

</table>
